{
  "/api/search": {
    "get": {
      "summary": "Full-text search pages",
      "tags": ["Search"],
      "parameters": [
        { "in": "query", "name": "q", "required": true, "schema": { "type": "string" } },
        { "in": "query", "name": "page", "schema": { "type": "integer", "minimum": 1 }, "description": "Page number (default 1)" },
        { "in": "query", "name": "pageSize", "schema": { "type": "integer", "minimum": 1 }, "description": "Items per page (default 20)" }
      ],
      "responses": {
        "200": { "description": "Search results with pagination" },
        "400": { "description": "q query is required" },
        "500": { "description": "Server error" }
      }
    }
  },
  "/api/search-autocomplete": {
    "get": {
      "summary": "Autocomplete titles by prefix",
      "tags": ["Search"],
      "parameters": [
        { "in": "query", "name": "q", "required": true, "schema": { "type": "string" } }
      ],
      "responses": {
        "200": { "description": "Array of title strings" },
        "500": { "description": "Server error" }
      }
    }
  }
}
